generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id                  String               @id @default(cuid())
  name                String
  role                UserRole             @default(STAFF)
  employeeId          String               @unique
  email               String               @unique
  phone               String?
  teamId              String?
  status              String               @default("ACTIVE")
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  adminOverrides      AttendanceOverride[] @relation("AdminAttendanceOverrides")
  attendanceOverrides AttendanceOverride[] @relation("UserAttendanceOverrides")
  attendances         Attendance[]
  dailyLocations      DailyLocation[]

  @@map("users")
}

model DailyLocation {
  id         String   @id @default(cuid())
  userId     String
  date       DateTime @db.Date
  latitude   Decimal  @db.Decimal(10, 8)
  longitude  Decimal  @db.Decimal(11, 8)
  radius     Int      @default(100)
  address    String?
  city       String?
  state      String?
  startTime  DateTime
  endTime    DateTime
  assignedBy String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@map("daily_locations")
}

model Attendance {
  id           String           @id @default(cuid())
  date         DateTime         @db.Date
  clockIn      DateTime?
  status       AttendanceStatus @default(PRESENT)
  location     String?
  ipAddress    String?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  attemptCount AttemptCount     @default(ZERO)
  deviceInfo   String?
  latitude     Decimal?         @db.Decimal(10, 8)
  locked       Boolean          @default(false)
  lockedReason String           @db.Text
  longitude    Decimal?         @db.Decimal(11, 8)
  photo        String?
  userId       String
  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([date])
  @@index([status])
  @@map("attendances")
}

model AttendanceOverride {
  id        String           @id @default(cuid())
  userId    String
  date      DateTime         @db.Date
  adminId   String
  oldStatus AttendanceStatus
  newStatus AttendanceStatus
  reason    String           @db.Text
  timestamp DateTime         @default(now())
  admin     User             @relation("AdminAttendanceOverrides", fields: [adminId], references: [id], onDelete: Cascade)
  user      User             @relation("UserAttendanceOverrides", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([adminId])
  @@index([date])
  @@map("attendance_overrides")
}

enum UserRole {
  ADMIN
  STAFF
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  REJECTED
}

enum AttemptCount {
  ZERO
  ONE
  TWO
  THREE
}
