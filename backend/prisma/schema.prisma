generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Admin {
  id                  String               @id @default(cuid())
  adminId             String               @unique
  name                String
  email               String               @unique
  password            String
  phone               String?
  status              String               @default("ACTIVE")
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  adminOverrides      AttendanceOverride[]
  assignedTeamLeaders FieldEngineer[]      @relation("AdminAssignedTeamLeaders")

  @@map("admins")
}

model FieldEngineer {
  id                  String               @id @default(cuid())
  name                String
  employeeId          String               @unique
  email               String               @unique
  password            String
  phone               String?
  teamId              String?
  isTeamLeader        Boolean              @default(false)
  assignedBy          String?
  status              String               @default("ACTIVE")
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  dailyLocations      DailyLocation[]
  attendances         Attendance[]
  attendanceOverrides AttendanceOverride[]
  assignedAdmin       Admin?               @relation("AdminAssignedTeamLeaders", fields: [assignedBy], references: [id])

  @@index([assignedBy], map: "field_engineers_assignedBy_fkey")
  @@map("field_engineers")
}

model DailyLocation {
  id         String        @id @default(cuid())
  employeeId String
  date       DateTime      @db.Date
  latitude   Decimal       @db.Decimal(10, 8)
  longitude  Decimal       @db.Decimal(11, 8)
  radius     Int           @default(100)
  address    String?
  city       String?
  state      String?
  startTime  DateTime
  endTime    DateTime
  assignedBy String
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  employee   FieldEngineer @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([employeeId, date])
  @@map("daily_locations")
}

model Attendance {
  id           String           @id @default(cuid())
  date         DateTime         @db.Date
  clockIn      DateTime?
  status       AttendanceStatus @default(PRESENT)
  location     String?
  ipAddress    String?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  attemptCount AttemptCount     @default(ZERO)
  deviceInfo   String?
  latitude     Decimal?         @db.Decimal(10, 8)
  locked       Boolean          @default(false)
  lockedReason String?          @db.Text
  longitude    Decimal?         @db.Decimal(11, 8)
  photo        String?          @db.LongText
  employeeId   String
  employee     FieldEngineer    @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([employeeId, date])
  @@index([date])
  @@index([status])
  @@map("attendances")
}

model AttendanceOverride {
  id         String           @id @default(cuid())
  employeeId String
  date       DateTime         @db.Date
  adminId    String
  oldStatus  AttendanceStatus
  newStatus  AttendanceStatus
  reason     String           @db.Text
  timestamp  DateTime         @default(now())
  admin      Admin            @relation(fields: [adminId], references: [id], onDelete: Cascade)
  employee   FieldEngineer    @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([employeeId])
  @@index([adminId])
  @@index([date])
  @@map("attendance_overrides")
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  MARKDOWN
}

enum AttemptCount {
  ZERO
  ONE
  TWO
  THREE
}
